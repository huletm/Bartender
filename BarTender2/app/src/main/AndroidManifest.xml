<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.maximehulet.bartender" >
    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="19"/>

    <application
        android:name="com.example.maximehulet.bartender.BarTenderApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.maximehulet.bartender.activities.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.maximehulet.bartender.activities.RegisterActivity"
            android:label="@string/register_activity_title"/>
        <activity
            android:name="com.example.maximehulet.bartender.activities.MainActivity"
            android:label="@string/main_activity_title" />

        <activity
            android:name="com.example.maximehulet.bartender.activities.SearchActivity"
            android:label="@string/search_activity_title" />
    </application>

</manifest>
